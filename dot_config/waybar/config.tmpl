{
    "layer": "top",
    "position": "bottom",
    "height": 30,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "hyprland/workspaces": {
        "all-outputs": false
    },
    "modules-center": [
        "clock#eu",
        "clock#home",
        "custom/weather"
    ],
    "modules-right": [
        "battery",
        "custom/uname",
        "memory",
        "cpu",
        "temperature",
        "temperature#gpu",
        "disk",
        "pulseaudio",
        "tray"
    ],
    "custom/weather": {
        "exec": "curl -s --connect-timeout 2 'wttr.in/?format=%C+%c+%t+(%f)+%h+%P+%m+UV%u+%w'",
        "format": "{}",
        "interval": 1500
    },
    "custom/uname": {
        "exec": "uname -r | sed 's/\\.fc.*//'",
        "format": "Ôûò {}",
        "interval": 3600
    },
    "custom/egauge": {
        "exec": "~/bin/egauge",
        "format": "{}",
        "interval": 300
    },
    "custom/amdups": {
        "exec": "~/bin/ups_wattage",
        "format": "Óì• {}W"
    },
    "custom/firewallups": {
        "exec": "~/bin/ups_wattage_firewall",
        "format": "Ôõø {}W"
    },
    "memory": {
        "interval": 30,
        "format": "Ôî∏ {used:0.1f}G"
    },
    "cpu": {
        "interval": 10,
        "format": "Ôãõ {avg_frequency:0.2f}GHz",
        "max-length": 10
    },
    "temperature": {
        "thermal-zone": 0,
{{- if eq .chezmoi.hostname "zorro" }}
        "hwmon-path": "/sys/class/hwmon/hwmon8/temp1_input",
{{- else if eq .chezmoi.hostname "amdbox" }}
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
{{- end }}
        "critical-threshold": 80,
        "format": "Ôù© {temperatureC}¬∞C",
        "interval": 5
    },
    "temperature#gpu": {
{{- if eq .chezmoi.hostname "zorro" }}
        "hwmon-path": "/sys/class/hwmon/hwmon7/temp1_input",
{{- else if eq .chezmoi.hostname "amdbox" }}
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
{{- end }}
        "critical-threshold": 90,
        "format": "Ôù© {temperatureC}¬∞C",
        "interval": 5
    },
    "disk": {
        "interval": 30,
        "format": "ÔÇ† {free}",
        "path": "/"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": false,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
    "clock#eu": {
        "format": "{:%H:%M} üá®üáø",
        "timezone": "Europe/Prague"
    },
    "clock#home": {
        "format": "{:%m/%d  üá∫üá∏ %H:%M:%S}",
        "interval": 1,
        "timezone": "America/Chicago"
    },
    "tray": {
        "icon-size": 14,
        "spacing": 5
    },
    "battery": {
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{power:0.1f}W {capacity}% {icon}",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ],
        "max-length": 25
    }
}
