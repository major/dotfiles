general {
        colors = true
        interval = 5
}

order += "battery all"
order += "disk /"
order += "memory"
order += "tztime local"
order += "tztime europe"

battery all {
        format = "%status %consumption %percentage %remaining"
}

disk "/" {
        format = "%avail"
}


memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S ðŸ‡ºðŸ‡¸"
}

tztime europe {
        format = "%H:%M ðŸ‡¨ðŸ‡¿"
        timezone = "Europe/Berlin"
}
