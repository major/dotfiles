# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# oh-my-zsh config
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"
plugins=(
        colored-man-pages
        dirhistory
        docker
        fzf
        podman
        python
        virtualenv
        z
        zsh-autosuggestions
        zsh-prompt-benchmark
        zsh-syntax-highlighting
)
source $ZSH/oh-my-zsh.sh

export PATH=$HOME/.local/bin:$HOME/.cargo/bin:$HOME/bin:/usr/local/bin:$PATH

# favorite editor
export EDITOR=vim

# configure history
setopt share_history
setopt EXTENDED_HISTORY
setopt HIST_FIND_NO_DUPS
export HISTTIMEFORMAT="[%F %T] "
export HISTFILESIZE=1000000000
export HISTSIZE=1000000000

# enable autocompletion.
autoload -U compinit
compinit

# Setup pure prompt.
autoload -U promptinit
promptinit

# use the ssh-agent started by systemd.
export SSH_AUTH_SOCK=~/.1password/agent.sock

# ensure gpg works properly in each terminal.
export GPG_TTY="$(tty)"

# Use awscli via its container.
export AWS_PROFILE=cloudx
